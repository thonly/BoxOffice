        // uint ticketSupply;
        // uint ticketsAvailable;
        // uint ticketsSold;
        // uint filmMarketValue;
        // uint fundsCollected;
        // uint fundsWithdrawn;
        // uint fundBalance;

        ( , audience, , , , , , , , ) = boxOffice.getFilmStats(0);
        Assert.equal(audience, 0, "should return total audience members");
    }

}